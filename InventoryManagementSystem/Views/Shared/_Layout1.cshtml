
@{
	ViewBag.Title = "_Layout1";
}


<!DOCTYPE html>
<html>
<head>
	<style>

		.na {
			text-decoration: none;
			color: white;
		}
	</style>
	<title>@Page.Title</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
	

	<link href="~/Content/bootstrap.css" rel="stylesheet" />
	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

</head>
<body>
	<nav class="navbar navbar-inverse" style="">
		<div class="container-fluid">
			<div class="navbar-header">
				<a class="navbar-brand" href="#">Srishti Sharma</a>
			</div>
			<ul class="nav navbar-nav">
				<li>@Html.ActionLink("Product", "Index", "User", null, new { @class = "ht" })</li>
				<li>
					@if (Session["u_id"] != null)
					{
						@Html.ActionLink("Create Purchase", "PurchaseProduct", "Purchase", null, new { @class = "ht" })
					}

				</li>
			</ul>
			<ul class="nav navbar-nav navbar-right">
				<li>
					@if (Session["u_id"] == null)
					{
						@Html.ActionLink("Sign IN", "login", "User", null, new { @class = "ht" })
					}

				</li>

				<li>
					@if (Session["u_id"] == null)
					{
						@Html.ActionLink("Sign Up", "SignUp", "User", null, new { @class = "ht" })
					}
					else
					{
						@Html.ActionLink("Sign Out", "Signout", "User", null, new { @class = "ht" })
					}

				</li>
			</ul>

		</div>
	</nav>
	@RenderSection("head", required: false)
	@RenderSection("scripts", required: false)
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderBody()
</body>
</html>

